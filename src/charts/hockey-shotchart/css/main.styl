$lineColor = #fff
	
.rink
	&-bg 
		fill $gray-pale	
	&-line
		stroke $lineColor
		stroke-width 2px	
	&-rect
		fill $lineColor	
	&-circle 
		fill transparent 
		stroke-width 2px 
		stroke $lineColor
	&-circle-fill
		fill $lineColor
		stroke-width 0

.shot 
	shape-rendering cripseEdges
	&.made 
		stroke $bruins-team
		fill $bruins-primary
	&.missed 
		stroke $bruins-team
		fill $bruins-team