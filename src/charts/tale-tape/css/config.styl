//=======================
// Dependencies
//=======================
@require './../../../base/css/variables.styl'
@require './../../../base/css/helpers.styl'

//=======================
// Chart Mod Variables
//=======================
$chart-name = tale-tape

.chart--{$chart-name}
	@require './main.styl'
	$sports-fill = {
		baseball: $redsox-secondary-as-fill
	}
	$sports = {
		baseball: $redsox-secondary
	}
	for sport, color in $sports-fill
		&.chart--{sport}
			li.measure ul.values li:first-child
				background color
	for sport, color in $sports
		&.chart--{sport}
			li.measure ul.values li:first-child
				span
					color color
			.chart-top--hed span.player:first-child
				color color
