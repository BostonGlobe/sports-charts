.chart-top--hed
	span.player
		color $gray-secondary
	span.vs
		padding-left 0.25em
		padding-right 0.25em

.chart-container

	li.measure

		margin-top 1em

		p.name
			span
				text-transform uppercase
				color $gray-tertiary
				font-size $label-size

		ul.values
			padding-right 2.5em

			li
				text-align right
				line-height 1.25
				background $gray-secondary
				min-width 4px
				position relative
				list-style none

				span.number
					font-size $label-size
					display inline-block
					color $text
					position absolute
					padding-top 0.2em
					padding-left 0.2em
