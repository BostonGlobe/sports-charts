// these should be in base / util colors.styl
$gray-pale = #ededed
$gray-secondary = #858585

$above = #ef8a62
$average = #ccc
$below = #67a9cf

// $above = #008048
// $average = #02C664
// $below = #7EF183

$court = rgba(#fff, 1)
$basket = rgba(#fff, 0.75)
$strokeWidth = 2px 

.chart-container svg 
	background-color $gray-pale

.key 
	&-container
		height 100%
		overflow hidden
		> * 
			float left
		p 
			vertical-align middle	
	&-frequency
		.hexagon
			fill $gray-secondary

.above
	fill $above
.average
	fill $average
.below
	fill $below
	// fill transparent
	// stroke $above

.court 
	&-line
		stroke $court
		stroke-width $strokeWidth
	
	&-shape 
		stroke $court 
		stroke-width $strokeWidth
		fill transparent
		
	.round 
		stroke-linecap round
	// .paint 
	// 	fill $court
		
	.free-throw-arc-under 
		stroke-dasharray 7.8

.basket
	stroke $basket
	stroke-width $strokeWidth
	fill transparent

.label-group
	text 
		fill green
		&.before
			text-anchor end
		&.after
			text-anchor start