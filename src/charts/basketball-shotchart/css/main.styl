// these should be in base / util colors.styl
@require('../../../base/css/variables.styl')

$celtics-team = #008048

$court = rgba(#fff, 1)
$basket = rgba(#fff, 0.75)
$strokeWidth = 2px 

// TODO move this to base 
.subhed 
	margin-top 0.5em 
	color $gray-secondary
	span
		color currentColor

// TODO move this to base
.display-none 
	display none

.chart-container svg 
	background-color $gray-pale

.pattern-container svg 
	width 0
	height 0

.key 
	&-container
		height 100%
		overflow hidden
		clear both
		> * 
			float left
		p 
			padding-top 0.1em
			color $gray-secondary
			text-transform uppercase
			font-size 0.8em

	&-frequency
		.hexagon
			fill $gray-secondary

.pattern-fill
	fill $celtics-team
					
.above
	fill $celtics-team
	stroke $celtics-team

.average
	stroke $celtics-team
	fill url(#pattern-average) transparent

.below
	fill transparent
	stroke $celtics-team

.below-threshold
	fill transparent
	stroke transparent

.court 
	&-line
		stroke $court
		stroke-width $strokeWidth
	
	&-shape 
		stroke $court 
		stroke-width $strokeWidth
		fill transparent
		
	.round 
		stroke-linecap round
	// .paint 
	// 	fill $court
		
	.free-throw-arc-under 
		stroke-dasharray 7.8

.basket
	stroke $basket
	stroke-width $strokeWidth
	fill transparent

// TODO move to base?
.explainer
	a 
		display block
		color $gray-secondary
		text-align right
		line-height 1.8
		font-size 0.8em

	p 
		color $gray-secondary
		font-family $sans
		font-size 0.8em
		font-weight 300
		line-height 1.6