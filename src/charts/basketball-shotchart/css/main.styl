@require('../../../base/css/variables.styl')
@require('../../../base/css/helpers.styl')

$court = rgba(#fff, 1)
$basket = rgba(#fff, 0.75)
$strokeWidth = 2px 

.chart-container svg 
	background-color $gray-pale

.pattern-container
	height 0
	svg 
		width 0
		height 0

.key 
	&-container
		height 100%
		overflow hidden
		clear both
		> * 
			float left
		p 
			padding-top 0.1em
			color $gray-secondary
			text-transform uppercase
			font-size 0.8em

	&-frequency
		.hexagon
			fill $gray-secondary

.pattern-fill
	fill $celtics-team
					
.above
	fill $celtics-team
	stroke $celtics-team

.average
	stroke $celtics-team
	fill url(#pattern-average) transparent

.below
	fill transparent
	stroke $celtics-team

.below-threshold
	fill transparent
	stroke transparent

.court 
	&-line
		stroke $court
		stroke-width $strokeWidth
	
	&-shape 
		stroke $court 
		stroke-width $strokeWidth
		fill transparent
		
	.round 
		stroke-linecap round
	// .paint 
	// 	fill $court
		
	.free-throw-arc-under 
		stroke-dasharray 7.8

.basket
	stroke $basket
	stroke-width $strokeWidth
	fill transparent