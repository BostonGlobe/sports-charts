//=======================
// Dependencies
//=======================
@require './../../../base/css/variables.styl'
@require './../../../base/css/helpers.styl'

//=======================
// Chart Mod Variables
//=======================
$chart-name = point-differential

.chart--{$chart-name}
	@require './main.styl'

.chart--{$chart-name}
	@require './main.styl'
	$sports = {
		baseball: lighten($redsox-secondary, 5)
		basketball: lighten($celtics-secondary, 5)
		football: lighten($patriots-secondary, 5)
		hockey: lighten($bruins-secondary, 5)
	}
	for sport, color in $sports
		&.chart--{sport}
			svg g.bars rect
				fill lighten($gray-tertiary, 5)
				&.positive
					fill color

			li.measure ul.values li:first-child
				background lighten(color, 5)
				span
					color color
			.chart-top--hed span.player:first-child
				color color
