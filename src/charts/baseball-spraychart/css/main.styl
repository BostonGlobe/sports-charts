svg
	display block
	.ballpark
		fill $gray-pale
		stroke $gray-pale
		stroke-width 3px
	.grid
		fill none
		stroke white
	.infield
		fill white
	.diamond
		fill $gray-pale
	text.tick
		fill $text
		font-size $notes-size
canvas
	display block
	width 100%
	position absolute
	top 0
	left 0

input[type='range']
	cursor pointer
