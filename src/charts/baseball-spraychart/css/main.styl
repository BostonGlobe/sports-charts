$header-1-size = 1.424em
$unitlabel-size = 0.79em
$notes-size = 0.65em
$spacer = 0.75em

@require './../../../base/css/variables.styl'
@require './slider.styl'
@require './key.styl'

header
	border-top solid black 0.225em
	padding-top 0.5em
	margin-bottom 1em
	span
		text-transform uppercase
		font-size 1.5em

.chart-container
	width 100%
	position relative

svg
	display block

	.ballpark
		fill $gray-pale
		stroke $gray-pale
		stroke-width 3px

	.grid
		fill none
		stroke white

	.infield
		fill white

	.diamond
		fill $gray-pale

canvas
	display block
	width 100%
	position absolute
	top 0
	left 0

.slider
	width 100%
	margin 1em 0 0.5em 0
	text-align center
	position relative
	span
		font-family $benton

	input
		display block
		margin 0 auto
		width 99%

	.slider-date-ranges
		width 100%
		overflow hidden
		span
			font-size $notes-size

		.start-date
			float left

		.end-date
			float right

	.slider-current-date-wrapper
		position relative
		overflow hidden
		margin 0.25em auto

		.slider-current-date
			position absolute
			top 0

			span
				white-space nowrap
				font-weight bold
