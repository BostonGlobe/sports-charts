$header-1-size = 1.424em
$header-2-size = 1.125em
$label-size = 0.889em
$unitlabel-size = 0.79em
$notes-size = 0.65em
$spacer = 0.75em

@require './../../../base/css/variables.styl'
@require './../../../base/css/slider.styl'
@require './key.styl'

*, *:before, *:after
	color $text

header
	border-top solid $text 0.225em
	padding-top 0.5em
	margin-bottom 1em
	span
		text-transform uppercase
		font-size $header-1-size

.chart-container
	width 100%
	position relative

svg
	display block

	.ballpark
		fill $gray-pale
		stroke $gray-pale
		stroke-width 3px

	.grid
		fill none
		stroke white

	.infield
		fill white

	.diamond
		fill $gray-pale

	text.tick
		fill $text
		font-size $notes-size

canvas
	display block
	width 100%
	position absolute
	top 0
	left 0
