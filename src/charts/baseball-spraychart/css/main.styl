.chart-container
	border solid red 1px
	position relative

svg
	display block
	border solid red 1px

	.ballpark
		fill #ededed
		stroke #ededed
		stroke-width 3px

	.grid
		fill none
		stroke white

	.infield
		fill white

	.diamond
		fill #ededed

canvas
	display block
	position absolute
	top 0
	left 0