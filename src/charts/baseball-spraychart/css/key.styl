ul.chart-key
	list-style none
	width 100%
	overflow hidden
	margin 0
	padding 0
	margin-bottom 2em

	li
		float left
		width 16.6%
		text-align center

	div.color
		height 1em
		span.outer
			font-size $unitlabel-size
			background red
			display inline-block
			border-radius 1em

			width 0.7em
			height 0.7em
			margin-top 0.3em

			&.out

				background $gray-3
				border solid $gray-3 1px

			&.sac

				background white
				border solid $gray-3 1px

			&.single

				background white
				border solid $redsox-2 1px

			&.double

				background white
				border solid $redsox-2 1px

			&.triple

				background $redsox-2
				border solid $redsox-2 1px

			&.hr

				width 1em
				height 1em
				margin-top 0
				background $redsox-1

			&.double .inner
				display inline-block
				background $redsox-2
				width 100%
				height 50%
				margin-top 50%

	div.label
		line-height 1
		span
			font-size $unitlabel-size
