.key
	list-style(none)
	width 100%
	margin-bottom 2em
	display flex
	&__item
		flex 1
	&__label
		display block
		font-size $unitlabel-size
		&:before
			content ''
			display block
			vertical-align super
			width 10px
			height 10px
			border-radius 50%
			border-width 1px
			border-style solid
			text-align center
			margin-bottom 0.5em
		&--out:before
			background-color $gray-tertiary
			border-color $gray-tertiary
		&--sac:before
			border-color $gray-tertiary
		&--single:before
			border-color $redsox-secondary
		&--double:before
			border-color $redsox-secondary
			background linear-gradient(to top, $redsox-secondary 50%, transparent 50%)
		&--triple:before
			background-color $redsox-secondary
			border-color $redsox-secondary
		&--hr:before
			width 15px
			height 15px
			margin-top -5px
			background-color $redsox-primary
			border-color $redsox-primary
