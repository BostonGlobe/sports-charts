$redsox-strongest = #a2002e
$redsox-secondary-mod = #ff2828
$gray-tertiary-mod = #7f7f7f

.key
	list-style(none)
	width 100%
	margin-bottom 2em
	display flex
	&__item
		flex 1
	&__label
		display block
		font-size $unitlabel-size
		color $text
		&:before
			content ''
			display block
			width 10px
			height 10px
			border-radius 50%
			border-width 1px
			border-style solid
			text-align center
			margin-bottom 0.5em
		&--out:before
			background-color $gray-tertiary-mod
			border-color $gray-tertiary-mod
		&--sac:before
			border-color $gray-tertiary-mod
		&--single:before
			border-color $redsox-secondary-mod
		&--double:before
			border-color $redsox-secondary-mod
			background linear-gradient(to top, $redsox-secondary-mod 50%, transparent 50%)
		&--triple:before
			background-color $redsox-secondary-mod
			border-color $redsox-secondary-mod
		&--hr:before
			width 15px
			height 15px
			margin-top -5px
			background-color $redsox-primary
			border-color $redsox-strongest
